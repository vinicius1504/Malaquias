# ===========================================
# MALAQUIAS CONTABILIDADE - CONFIGURACOES
# ===========================================
# Copie este arquivo para .env.local (dev) ou .env (prod)
# NUNCA commite o arquivo .env ou .env.local

# ===========================================
# AMBIENTE
# ===========================================
NODE_ENV=production

# ===========================================
# URLs (OBRIGATORIO)
# ===========================================
# URL do site em producao (substitua pelo IP ou dominio do servidor)
NEXT_PUBLIC_SITE_URL=http://SEU_IP_OU_DOMINIO
NEXT_PUBLIC_APP_URL=http://SEU_IP_OU_DOMINIO

# ===========================================
# NEXTAUTH / AUTH.JS (OBRIGATORIO - SEGURANCA)
# ===========================================
# Gere com: openssl rand -base64 32
AUTH_SECRET=sua-chave-secreta-muito-forte-aqui-min-32-chars
NEXTAUTH_SECRET=sua-chave-secreta-muito-forte-aqui-min-32-chars
NEXTAUTH_URL=http://SEU_IP_OU_DOMINIO

# ===========================================
# POSTGRESQL (OBRIGATORIO)
# ===========================================
# String de conexao com o banco PostgreSQL local
DATABASE_URL=postgresql://malaquias_user:SUA_SENHA_AQUI@localhost:5432/malaquias

# ===========================================
# MINIO - STORAGE (OBRIGATORIO)
# ===========================================
# Configuracoes do MinIO para armazenamento de arquivos
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=SUA_SENHA_MINIO_AQUI
MINIO_BUCKET=malaquias
# URL publica para acessar os arquivos (usar IP externo em producao)
# Formato: http://SEU_IP:9000 ou https://minio.seudominio.com
MINIO_PUBLIC_URL=http://SEU_IP_OU_DOMINIO:9000

# ===========================================
# GEMINI AI - TRADUCAO (OPCIONAL)
# ===========================================
# Encontre em: Google AI Studio > API Keys
GEMINI_API_KEY=sua-gemini-api-key-aqui
GEMINI_API_KEY_DP=sua-gemini-api-key-para-documentos-aqui

# ===========================================
# EMAIL - RESEND (OPCIONAL)
# ===========================================
# Para envio de credenciais de usuarios
# Encontre em: resend.com > API Keys
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=Malaquias <noreply@seu-dominio.com.br>

# ===========================================
# MODELO 3D (RECOMENDADO PARA PRODUCAO)
# ===========================================
# URL do modelo 3D hospedado externamente (GitHub Releases)
NEXT_PUBLIC_3D_MODEL_URL=https://github.com/vinicius1504/Malaquias/releases/download/v1.0.0-assets/excritorio2.glb

# ===========================================
# ANALYTICS E MARKETING (OPCIONAL)
